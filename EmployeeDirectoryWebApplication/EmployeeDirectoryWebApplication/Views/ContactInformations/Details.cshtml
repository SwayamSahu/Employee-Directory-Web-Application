@model EmployeeDirectoryWebApplication.Models.ContactInformation

@{
    // Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Information Details</title>
    <style>
        body {
            padding-top: 20px;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px;
            margin: auto;
        }

        .details {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        h4 {
            font-size: 24px;
            margin-bottom: 15px;
            color: #333;
        }

        hr {
            border-color: #ccc;
            margin-top: 10px;
            margin-bottom: 20px;
        }

        dl {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
        }

        dt {
            font-weight: bold;
            margin-top: 10px;
        }

        dd {
            margin-left: 0;
            margin-top: 10px;
        }

        .actions {
            margin-top: 20px;
        }

        .btn {
            display: inline-block;
            padding: 8px 20px;
            font-size: 14px;
            background-color: #007bff;
            color: #fff;
            border: 1px solid #007bff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s, color 0.3s, border-color 0.3s;
            margin-right: 10px;
        }

            .btn:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="details">
            <h4>Contact Information</h4>
            <hr />
            <dl>
                <dt>Employee ID:</dt>
                <dd>@Html.DisplayFor(model => model.EmployeeId)</dd>

                <dt>Email:</dt>
                <dd>@Html.DisplayFor(model => model.Email)</dd>

                <dt>Phone:</dt>
                <dd>@Html.DisplayFor(model => model.Phone)</dd>

                <dt>Office Location:</dt>
                <dd>@Html.DisplayFor(model => model.OfficeLocation)</dd>

                <dt>Social Media Profiles:</dt>
                <dd>@Html.DisplayFor(model => model.SocialMediaProfiles)</dd>

                @* <dt>Created Date:</dt>
                <dd>@Html.DisplayFor(model => model.CreatedDate)</dd>

                <dt>Created By:</dt>
                <dd>@Html.DisplayFor(model => model.CreatedBy)</dd> *@

                <dt>Updated Date:</dt>
                <dd>@Html.DisplayFor(model => model.UpdatedDate)</dd>

                @* <dt>Updated By:</dt>
                <dd>@Html.DisplayFor(model => model.UpdatedBy)</dd> *@
            </dl>
        </div>

        <div class="actions">
            @if (User.IsInRole("Admin"))
            {
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ContactId">Edit</a>
            }
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>

</body>
</html>
